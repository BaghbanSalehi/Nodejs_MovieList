<h1 class="title">Movies</h1>



<div class="card-columns">
  {{#each movie}}
    <div class="card">
      <div class="card-body">
        <div class="tools">
        <a href="/movies/review/{{this.title}}" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i></a>
      </div>
        <p class="card-text">{{{this.title}}}</p>
        <p class="card-text"> Release date: {{{this.year}}}</p>
        <p class="card-text"> About this movie: {{{this.summary}}}</p>
        <p class="card-text"> Director: {{{this.director}}}</p>
          <footer class="blockquote-footer">
            <small class="text-muted">
              Rate: {{{ this.rate }}}
            </small>
          </footer>
      </div>
    </div>
  {{/each}}
 
</div>