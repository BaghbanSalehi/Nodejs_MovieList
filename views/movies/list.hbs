<h1 class="title">Movies</h1>


         <h2>
         <a href="/login" id="logout" class="btn btn-sm btn-secondary">Logout</a>
        </h2>

<div class="card-columns">
  {{#each movie}}
    <div class="card" style="width: 240px;">
      <div class="card-body">
        <div class="tools">
        <a href="/movies/review/{{this.title}}" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i></a>
        <a href="/movies/show/{{this.title}}" class="btn btn-primary btn-sm"><i class="fas fa-eye"></i></a>
      </div>
      <img src="{{this.imageurl}}" style="width: 200px;height: 400px;"/>
        <p class="card-text">{{{this.title}}}</p>
          <footer class="blockquote-footer">
            <small class="text-muted">
              Rate: {{{ this.rate }}}/10
            </small>
          </footer>
      </div>
    </div>
  {{/each}}
 
</div>